<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Define a Rolling File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Log file location -->
        <file>src/main/java/logs/app.log</file>

        <!-- Define rolling policy -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- File name pattern -->
            <fileNamePattern>logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Maximum number of archived log files to keep -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <!-- Log format -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger: Redirect all logs to the file appender -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>

    <!-- Logger for your application: Adjust as needed -->
    <logger name="com.alaabo.grh" level="DEBUG" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Logger for SQL statements (if using an ORM like Hibernate) -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

</configuration>
